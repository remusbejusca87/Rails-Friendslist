<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<%= link_to 'New Category', new_category_path, class:"btn btn-primary" %>
<div class="row">
  <div class="col">
    <% @categories.each do |category| %> <br>
      <div class="card">
        <div class="card-header"> Type of category </div>
        <div class="card-body">
          <h5 class="card-title"><%= category.category %></h5>
          <%= link_to 'Show', category, class:"btn btn-secondary" %>
          <%= link_to 'Edit', edit_category_path(category), class:"btn btn-primary" %>
          <%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<br>
