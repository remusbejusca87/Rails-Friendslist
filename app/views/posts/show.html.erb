<div class="card">
  <div class="card-body">
    <h5 class="card-title">
      <strong> Title: </strong><%= @post.title%>
    </h5>
    <p class="card-text">
      <strong> Content: </strong><%= @post.content%>
    </p>
    <strong> Category: </strong><%= @post.category.category %>
    <br> <br>
    <%= link_to "Edit", edit_post_path(@post), class:"btn btn-primary" %>
    <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' },
        class:"btn btn-danger" %>
    <%= link_to "Back", posts_path(@post), class:"btn btn-secondary" %>
  </div>
</div> 

<h6> <strong> <%= @post.comments.count%> </strong> Comments </h6>
<hr>
<%= render @post.comments %>

<div class="card">
  <div class="card-body">
  <h5> Leave a comment to this post: </h5>
  <%= render 'comments/form'%>
  </div>
</div>
